/* ==========================================================================
   Variables
========================================================================== */

$c-shadow = rgba(0, 0, 0, 0.15);
$c-text = #a4a3a3;


/* Default
 ================ */
.sidebar {
  background-color: var(--c-support-dark);
  height: 100%;
  position: fixed;
  top: 0;
  transition: width 0.3s ease;
  width: 290px;

  &.isMobile {
    left: -290px;
    max-width: 290px;
    transition: left 0.3s ease;
    width: 80%;
    z-index: $z-upmax;
  }

  &.isMobile.isMobileOpen {
    left: 0;
  }
}

.logotype {
	align-items: center;
  box-shadow: 0 1px 4px 0 $c-shadow;
  cursor: pointer;
  display: flex;
  flex-direction: row;
  height: 74px;
  justify-content: center;
  overflow: hidden;
}

.content { padding-top: 20px; }

.contentTitle {
  color: var(--c-menu-text);
  display: block;
  font-size: 13px;
  margin-bottom: 12px;
  padding-left: 27px;
  text-transform: uppercase;

  &.isNavClosed {
    padding-left: 12px;
  }
}

.toggle {
  background-color: transparent;
  border: 0;
  cursor: pointer;
  height: 30px;
  outline: 0;
  padding: 0;
  position: absolute;
  right: -50px;
  text-align: right;
  top: 22px;
  width: 50px;
}

.toggleIcon { color: $white; }

.closed { width: 60px; }

.overlay {
  background: $black;
  height: 100%;
  left: 0;
  opacity: 0;
  position: fixed;
  top: 0;
  transition: all 0.5s ease;
  visibility: hidden;
  width: 100%;
  z-index: $z-upmin;

  &.isOpen {
    opacity: 0.6;
    transition: all 0.5s ease;
    visibility: visible;
  }
}

/* ==========================================================================
   MENU
========================================================================== */

/* Default
================ */
.menu {
  margin: 0;
}

.iconLeft {
  color: $c-text;
  margin-right: 10px;
}

.menuItem {
  color: $c-text;
  cursor: pointer;
  display: inline-block;
  font-size: 14px;
  line-height: 1.2;
  width: 100%;

  &.isActive {
    background-color: var(--c-support);
  }

  & .menu {
    padding: 10px;
  }
}

/* Dark
================ */
/* Accordion Type
================ */
.accordionMenu {
  .menuItem {
    color: $white;
  }

  .menuItem.isNotAccordion {
    border-left: 2px solid transparent;
    color: $white;
    padding: 15px 26px 15px 24px;
    transition: font-size 0.3s ease;

    &:hover, &.isActive {
      background: var(--c-support);
      border-left-color: var(--c-primary-dark);
    }

    .iconLeft {
      color: $white;
      margin-right: 22px;
    }
  }

  &.closed {
    .menuItem {
      transition: width 0.1s ease;
    }

    .menuItem.isNotAccordion {
      font-size: 0;
      padding: 15px 10px;
    }

    .menuItem .menu .menuItem {
      font-size: 0;
      width: 100%;
    }

    .menuItem.isActive:not(.isNotAccordion ) {
      transition: width 0.3s ease-in-out;
      width: 290px;
    }

    .menuItem.isActive .menu .menuItem {
      font-size: 14px;
      transition: font-size 0.5s ease;
    }
  }

  .menuItem .menu {
    padding: 0;
    padding-bottom: 10px;

    .menuItem {
      color: $c-text;
      padding: 10px 26px 10px 64px;

      &.isActive {
        color: $white;
      }

      &:hover {
        color: $white;
      }
    }

    .menuItem .menu {
      padding-bottom: 0;
    }
  }
}

